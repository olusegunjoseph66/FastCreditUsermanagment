@page
@model FastCreditWebApp.Pages.UserManagement.ListuserModel
@{
    Layout = "~/Pages/Shared/_LayoutA.cshtml";
}


<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">       

        <p>Lists Of Registered Users</p>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">


                    <form method="get">
                        
                        <br /><br />
                        <div class="row">
                            <div class="col-md-2">
                                <label asp-for="@Model.StartDate"></label>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <input asp-for="@Model.StartDate" />
                                </div>
                            </div>


                            <div class="col-md-2">
                                <label asp-for="@Model.EndDate"></label>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <input asp-for="@Model.EndDate" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search"></i> Search
                                </button>
                            </div>
                        </div><br /><br />


                    </form>
                    @if (Model.UserResponselst?.data?.items?.ToList()?.Count > 0)
                    {
                        <div class="table-responsive table--no-card m-b-30">
                            <table class="table table-borderless table-hover table-striped table-earning">

                                <thead>
                                    <tr>
                                        <th><strong>USER ID</strong></th>
                                        <th><strong>FIRST NAME</strong></th>
                                        <th><strong>LAST NAME</strong></th>
                                        <th><strong>GENDER</strong></th>
                                        <th><strong>PHONE</strong></th>
                                        <th><strong>EMAIL</strong></th>
                                        <th><strong>STATUS</strong></th>
                                        <th><strong>ROLES</strong></th>
                                        <th><strong>NATIONALITY</strong></th>
                                        <th><strong>DATE OF BIRTH</strong></th>
                                        <th> </th>
                                    </tr>

                                </thead>


                                @foreach (var models in Model.UserResponselst?.data?.items?.ToList())
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                <strong>@models.UserId </strong><br />

                                            </td>
                                            <td>@models.FirstName</td>
                                            <td>@models.LastName</td>
                                            <td>@models.Gender</td>
                                            <td>@models.Phone</td>
                                            <td>@models.EmailAddress</td>
                                            <td>@models.UserStatus.name</td>
                                            <td>@models.RoleId</td>
                                            <td>@models.Nationality</td>
                                            <td>@string.Format("{0:F}", models.DateOfBirth)</td>
                                            <td>
                                             <a asp-page="/UserManagement/Updateuser" asp-route-id="@models.UserId" class="btn btn-primary">Edit </a>
                                              
                                             <a asp-page="/UserManagement/Deleteuser" asp-route-id="@models.UserId" class="btn btn-danger">Delete </a>
                                            </td>
                                        </tr>
                                    </tbody>

                                }
                            </table>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>