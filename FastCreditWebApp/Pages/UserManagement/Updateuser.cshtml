@page "{id:min(1)?}/{handler?}"
@model FastCreditWebApp.Pages.UserManagement.UpdateuserModel
@{
    Layout = "~/Pages/Shared/_LayoutA.cshtml";
}



<p class="right">
    <input class="day" type="hidden" value="@Model.id" asp-for="@Model.UsernowResponse.UserId" >

</p>

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-9">
                    <div class="card">
                        <div class="card-header">
                            <strong>Update User</strong>
                        </div>
                        <div class="card-body card-block">
                            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">

                                <div class="card">
                                    <div class="col-md-12 col-md-offset-2">

                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input asp-for="@Model.UserDetaResponselst.data.UserId" type="hidden" class="form-control" />

                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label asp-for="@Model.UserDetaResponselst.data.FirstName" class="control-label"></label>
                                            </div>
                                            <div class="col-md-7">
                                                <input asp-for="@Model.UserDetaResponselst.data.FirstName" class="form-control" />
                                                <span asp-validation-for="@Model.UserDetaResponselst.data.FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label asp-for="@Model.UserDetaResponselst.data.LastName" class="control-label"></label>
                                            </div>
                                            <div class="col-md-7">
                                                <input asp-for="@Model.UserDetaResponselst.data.LastName" class="form-control" />
                                                <span asp-validation-for="@Model.UserDetaResponselst.data.LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label asp-for="@Model.UserDetaResponselst.data.Phone" class="control-label"></label>
                                            </div>
                                            <div class="col-md-7">
                                                <input asp-for="@Model.UserDetaResponselst.data.Phone" class="form-control" />
                                                <span asp-validation-for="@Model.UserDetaResponselst.data.Phone" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label asp-for="@Model.UserDetaResponselst.data.Gender" class="control-label"></label>
                                            </div>
                                            <div class="col-md-7">
                                                <select asp-for="@Model.UserDetaResponselst.data.Gender" asp-items="@Model.Genders" class="form-control">
                                                    <option value="">Select Gender</option>
                                                </select>

                                                <span asp-validation-for="@Model.UserDetaResponselst.data.Gender" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label asp-for="@Model.UserDetaResponselst.data.DateOfBirth" class="control-label"></label>
                                            </div>
                                            <div class="col-md-7">
                                                <input type="date" asp-for="@Model.UserDetaResponselst.data.DateOfBirth" class="form-control" />
                                                <span asp-validation-for="@Model.UserDetaResponselst.data.DateOfBirth" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label asp-for="@Model.UserDetaResponselst.data.EmailAddress" class="control-label"></label>
                                            </div>
                                            <div class="col-md-7">
                                                <input asp-for="@Model.UserDetaResponselst.data.EmailAddress" class="form-control" />
                                                <span asp-validation-for="@Model.UserDetaResponselst.data.EmailAddress" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label asp-for="@Model.UserDetaResponselst.data.Nationality" class="control-label"></label>
                                            </div>
                                            <div class="col-md-7">
                                                <select asp-for="@Model.UserDetaResponselst.data.Nationality" asp-items="@((List<SelectListItem>)ViewData["Project"])" class="form-control">
                                                    <option value="">Select Nationality</option>
                                                </select>
                                                <span asp-validation-for="@Model.UserDetaResponselst.data.Nationality" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-2">
                                            </div>
                                            <div class="col-md-7">
                                                <select asp-for="@Model.UserDetaResponselst.data.RoleId" asp-items="@((List<SelectListItem>)ViewData["Roles"])" class="form-control">
                                                    <option value="">Select Role</option>
                                                </select>
                                                <span asp-validation-for="@Model.UserDetaResponselst.data.RoleId" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-2 col-md-offset-2">
                                            <div class="form-group">
                                                <input type="submit" value="Update" asp-page-handler="Update" class="btn btn-primary" />

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>




                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
